@using Microsoft.AspNetCore.Identity
@using PhotoProject.Areas.Identity.Data
@inject SignInManager<PhotoProjectUser> SignInManager
@inject UserManager<PhotoProjectUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PhotoProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PhotoProject.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
</head>
<body>
    @if (SignInManager.IsSignedIn(User))
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/photo.png" width="50px" height="50px" style="margin-right:15px; margin-bottom:5px;"/>PhotoProject</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                        <!-- POPRAWIĆ FORMATOWANIE LIST PHOTO I ALBUM - FRONT, PRZEDE WSZYSTKIM ABY STRONA NIE POKAZYWAŁA SIĘ PRZY LOGOWANIU  -->
                        <ul class="navbar-nav d-flex flex-row me-2">
                            <li class="nav-item dropdown align-content-center align-bottom">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="bi bi-gear"></i> PHOTO
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" asp-controller="Photo" asp-action="Index"><i></i>Show all</a>
                                    <a class="dropdown-item" asp-controller="Photo" asp-action="Create"><i></i>Create new</a>
                                </div>
                            </li>
                        </ul>
                        <ul class="navbar-nav d-flex flex-row me-2">
                            <li class="nav-item dropdown align-content-center align-bottom">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="bi bi-gear"></i> ALBUM
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" asp-controller="Album" asp-action="Index"><i></i> Show all</a>
                                    <a class="dropdown-item" asp-controller="Album" asp-action="Create"><i></i> Create new</a>
                                </div>
                            </li>
                        </ul>
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <partial name="_LoginPartial.cshtml" />
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    }
    <div class="container">
        @*To tutaj jest manage account*@
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

@*    <footer class="footer text-muted">
        <div class="container">
            &copy; 2023 - PhotoProject - <a asp-area="" asp-controller="Home" asp-action="Privacy"> Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
