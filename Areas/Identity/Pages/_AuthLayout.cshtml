@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/AuthLayoutStyleSheet.css" asp-append-version="true" />
</head>

<div class="row justify-content-center" id="diver">
    <div class="col-5 mt-5">
        <div class="card login-logout-card">
            <div class="card-header" id="headerbody">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item" id="lg">
                        <a class="nav-link" href="/Identity/Account/Login">
                            Log In
                        </a>
                    </li>
                    <li class="nav-item" id="rg">
                        <a class="nav-link" href="/Identity/Account/Register">
                            Register    
                        </a>
                    </li>
                </ul>
            </div>
            <div class="card-body" id="cardbody">
                <div class="row justify-content-center">
                    <div class="col-10 my-4">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @RenderSection("Scripts", required: false)
    <script>
        $(function () {
            const currentPage = location.pathname;
            $('.nav-tabs li a').each(function () {
                const $this = $(this);
                if (currentPage.toLowerCase().indexOf($this.attr('href').toLowerCase()) != -1) {
                    $this.addClass('active');
                }
            })
        })
    </script>
}